{% extends 'adminBase.html.twig' %}
{% block title %}Admin-Cataluña Pizz'{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form action="index.php?route=addDrink" method="post">
                        <h1 class="adminTitle">Ajouter une nouvelle boisson</h1>
                        <fieldset class="form-group">
                            <legend>Création</legend>
                            <label for="title">Boisson</label>
                            <input type="text" class="form-control" name="title" id="title"
                                   placeholder="Entrer le nom de la pizza" value="{{ drink.title }}"/>
                            <label for="price_1">Prix boisson standard</label>
                            <input type="text" class="form-control" name="price_1" id="price_1"
                                   placeholder="Entrer le prix" value="{{ drink.price_1 }}"/>
                            <label for="price_2">Prix grande boisson</label>
                            <input type="text" class="form-control" name="price_2" id="price_2"
                                   placeholder="Entrer le prix" value="{{ drink.price_2 }}"/>
                            <label for="picture">Photo (optionnel)</label>
                            <input type="text" class="form-control" name="picture" id="picture"
                                   placeholder="Entrer le prix" value="{{ drink.picture }}"/>
                        </fieldset>

                        <button type="submit" class="btn btn-success">

                            <span class="glyphicon glyphicon-plus"></span>Ajouter boisson
                        </button>
                    </form>
                </div>
                <form method="get" action="">
                    <input type="hidden" name="route" value="delDrink">
                    <button type="submit" class="btn btn-warning">
                        <span class="glyphicon glyphicon-refresh"></span>Modifier une boisson
                    </button>
                </form>
            </div>
        </div>
    </div>
    {% if errors %}
        {%  for error in errors %}
            <div class="error"><p>{{ error }}</p></div>
        {% endfor %}
    {% endif %}
{% endblock %}
