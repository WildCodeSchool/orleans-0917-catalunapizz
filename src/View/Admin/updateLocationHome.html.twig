{% extends 'adminBase.html.twig' %}
{% block body %}
<div class="adminContent">
    <div class="container">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
    <div class="titles">
        <h1 class="adminTitle">Planning</h1>
    </div>
    <hr class="yellow">
    <h2 class="titleCenter">Jour Ã  modifier</h2>
