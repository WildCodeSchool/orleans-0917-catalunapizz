{% extends 'adminBase.html.twig' %}
{% block title %}Admin-Cataluña Pizz'{% endblock %}
{% block body %}
    <h1 class="adminTitle">La carte</h1>

    <h2>Nos pizzas</h2>
    <ul>
        <h3>Pizza Base tomate</h3>
        {% for pizzaCategory in pizzaCategories %}
            {% if pizzaCategory.pizza.categoryId == '1' %}
            <li>{{ pizzaCategory.pizza.title }} :
                <small>{{ pizzaCategory.category.name }} {{ pizzaCategory.pizza.ingredients }}</small>
                <span class="label label-info">{{ pizzaCategory.pizza.price1 }} {{ pizzaCategory.pizza.price2 }}</span>
                <form method="post" action="admin.php?route=updatePizza">
                    <input type="hidden" name="id" value="{{ pizzaCategory.pizza.id }}">
                    <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-refresh"></span>Modifier</button>
                </form>
                <form method="post" action="admin.php?route=delPizza">
                    <input type="hidden" name="id" value="{{ pizzaCategory.pizza.id }}">
                    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>Supprimer</button>
                </form>
            </li>
            {% endif %}
        {% endfor %}
    </ul>

