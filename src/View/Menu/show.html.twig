    {% extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid carte">
    <div class="row">
        <div class="carte_title"><h2><span><img src="assets/images/chalkflag.png" class="flagChalk"></span> Nos pizzas <span><img src="assets/images/chalkflag.png" class="flagChalk"></span></h2></div>
        <div class="col-md-5">
            <ul>
                <div class="container-fluid">
                    <div class="row">
                        <div class="tomate">
                            <div class="row">
                                <h3><div class="category_title col-md-6">Base tomate</div></h3>
                                <div class="col-md-5 summary">29cm</div>
                                <div class="col-md-1 summary">33cm</div>
                            </div>
                            {% for pizzaCategory in pizzaCategories %}
                                {% if pizzaCategory.category.name == 'BASE TOMATE' %}
                                <li>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-6 pizza_title">{{ pizzaCategory.pizza.title }}</div>
                                            <div class="col-md-5 price">{{ pizzaCategory.pizza.price1 }}</div>
                                            <div class="col-md-1 price">{{ pizzaCategory.pizza.price2 }}</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-9 ingredients_title"><small>{{ pizzaCategory.category.name }} {{ pizzaCategory.pizza.ingredients }}</small></div>
                                        </div>
                                    </div>
                                </li>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </ul>
            <img src="assets/upload/Menu/Base_creme.png">
        </div>
        <div class="col-md-offset-1 col-md-5">
            <ul>
                <div class="container-fluid">
                    <div class="row">
                        <img src="assets/upload/Menu/Base_tomate.png">
                        <div class="creme">
                            <div class="row">
                                <h3><div class="category_title col-md-6">Base creme</div></h3>
                                <div class="col-md-5 summary">29cm</div>
                                <div class="col-md-1 summary">33cm</div>
                            </div>
                            {% for pizzaCategory in pizzaCategories %}
                                {% if pizzaCategory.category.name == 'BASE CREME' %}
                                    <li>
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-md-6 pizza_title">{{ pizzaCategory.pizza.title }}</div>
                                                <div class="col-md-5 price">{{ pizzaCategory.pizza.price1 }}</div>
                                                <div class="col-md-1 price">{{ pizzaCategory.pizza.price2 }}</div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-9 ingredients_title"><small>{{ pizzaCategory.category.name }} {{ pizzaCategory.pizza.ingredients }}</small></div>
                                            </div>
                                        </div>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </ul>
        </div>
    </div>
</div>

<div>
    <h2><span><img src="assets/images/chalkflag.png" class="flagChalk"></span> Nos Boissons <span><img src="assets/images/chalkflag.png" class="flagChalk"></span></h2>
    <ul>
        {% for drink in drinks %}
            <li>{{ drink }}</li>
        {% endfor %}
    </ul>

</div>
    <div class="container-fluid carte">
        <div class="row">
            <div class="carte_title"><h2><span><img src="assets/images/chalkflag.png" class="flagChalk"></span> Nos desserts <span><img src="assets/images/chalkflag.png" class="flagChalk"></span></h2></div>
        </div>
        <ul>
            <div class="container-fluid">
                <div class="row">
                    <div class="dessert col-md-12">
                        {% for pizzaCategory in pizzaCategories %}
                            {% if pizzaCategory.category.name == 'DESSERT' %}
                            <li>
                                <div class="col-md-6">
                                    <div class="col-md-6 pizza_title">{{ pizzaCategory.pizza.title }}</div>
                                    <div class="col-md-5 price">{{ pizzaCategory.pizza.price1 }}</div>
                                    <div class="col-md-1 price">{{ pizzaCategory.pizza.price2 }}</div>
                                    <div class="row">
                                        <div class="col-md-9 ingredients_title"><small>{{ pizzaCategory.category.name }} {{ pizzaCategory.pizza.ingredients }}</small></div>
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </ul>
    </div>


{% endblock %}
