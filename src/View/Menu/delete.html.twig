{% extends 'base.html.twig' %}
{% block body %}
    <h1>La carte</h1>

    <h2>Nos pizzas</h2>
    <ul>
        {% for pizzaCategory in pizzaCategories %}
            <li>{{ pizzaCategory.pizza.title }} :
                <small>{{ pizzaCategory.category.name }} {{ pizzaCategory.pizza.ingredients }}</small>
                <span class="label label-info">{{ pizzaCategory.pizza.price1 }} {{ pizzaCategory.pizza.price2 }}</span>
                <form method="post" action="index.php?route=delPizza">
                    <input type="hidden" name="id" value="{{ pizzaCategory.pizza.id }}">
                    <button type="submit" class="btn btn-success">Supprimer</button>
                </form>
            </li>
        {% endfor %}
    </ul>

    <h2>Nos Boissons</h2>
    <ul>
        {% for drink in drinks %}
            <li>{{ drink }}</li>
        {% endfor %}
    </ul>
{% if errors %}
    <ul class="alert alert-danger">
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}